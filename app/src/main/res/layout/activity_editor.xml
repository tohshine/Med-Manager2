<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.znuta.med_manager.EditorActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:weightSum="1">



        <EditText
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_design"
        android:id="@+id/medname"
        android:layout_width="match_parent"
        android:layout_height="34dp"
            android:paddingLeft="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Drug Name"  />

    <EditText
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_design"
        android:id="@+id/meddesc"
        android:layout_width="match_parent"
        android:ems="10"
        android:layout_height="34dp"
        android:paddingLeft="10dp"
        android:inputType="textMultiLine"
        android:hint="Drug Discription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:background="@drawable/edit_text_design"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/medinterval"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Time Interval"/>



        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/medintervalsel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <TextView
            android:textColor="#bd0e000c"
            android:gravity="center"
            android:textSize="18dp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starting Date"/>

        <DatePicker
            android:id="@+id/medstdate"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />

        <TimePicker
            android:id="@+id/medsttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ending Date"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>
        <DatePicker
            android:id="@+id/mededdate"
            android:layout_width="wrap_content"
            android:layout_height="470dp"
            android:background="#bd0e000c"
            android:layout_weight="1.38" />
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

    </LinearLayout>


    </ScrollView>

